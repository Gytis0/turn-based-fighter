Label
{
	-unity-font-style: bold;
	-unity-text-align: middle-center;
	font-size: 20px;
}

.horizontal-container
{
	flex-direction: row;
	justify-content: center;
	align-content: center;
	flex-wrap: wrap;
}

.dark-button
{
	background-color: #1C2025;
	color: #E0E0E0;
	border-color: transparent;
	min-height: 50px;
}

.dark-button:hover
{
	background-color: #181B1F;
	color: #FDD052;
}

.dark-button:active
{
	border-color: #FDD052;
}